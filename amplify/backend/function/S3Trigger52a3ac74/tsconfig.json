{
  "include": [
    "**/*.ts",
    "./src/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "src": [
        "./src"
      ]
    }
  }
}